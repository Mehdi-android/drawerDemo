<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_blue"
        android:orientation="horizontal"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:orientation="vertical">

            <com.com.nusatrip.view.TextViewPlus
                style="@style/menuTitleTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/flight_date"
                app:customFont="@string/font_bold" />

            <com.com.nusatrip.view.TextViewPlus
                style="@style/searchflight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/passenger_number"
                app:customFont="@string/font_bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageView
                style="@style/menuTitleTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/search_result_magnify" />

            <com.com.nusatrip.view.TextViewPlus
                style="@style/menuTitleTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="@string/modify_search"
                app:customFont="@string/font_bold" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:background="@drawable/search_result_border"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="1dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/dark_blue"
                    android:gravity="center"

                    android:orientation="vertical">

                    <com.com.nusatrip.view.TextViewPlus
                        style="@style/menuTitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:gravity="center"
                        android:text="@string/cheap" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <com.com.nusatrip.view.TextViewPlus
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/curreny_name"
                            android:textColor="@color/light_yellow"
                            app:customFont="@string/font_bold" />

                        <com.com.nusatrip.view.TextViewPlus

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/currency_value"
                            android:textColor="@color/light_yellow"
                            android:textSize="@dimen/list_text_size"
                            app:customFont="@string/font_bold" />

                        <com.com.nusatrip.view.TextViewPlus
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"

                            android:text="@string/currency_value_2"
                            android:textColor="@color/light_yellow"
                            app:customFont="@string/font_bold" />
                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="1dp"
                android:layout_weight="1"


                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/dark_blue"
                    android:gravity="center_horizontal"

                    android:orientation="vertical">

                    <com.com.nusatrip.view.TextViewPlus
                        style="@style/menuTitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:gravity="center"
                        android:text="@string/quick" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <com.com.nusatrip.view.TextViewPlus
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/curreny_name"
                            android:textColor="@color/light_yellow"
                            app:customFont="@string/font_bold" />

                        <com.com.nusatrip.view.TextViewPlus

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/currency_value"
                            android:textColor="@color/light_yellow"
                            android:textSize="@dimen/list_text_size"
                            app:customFont="@string/font_bold" />

                        <com.com.nusatrip.view.TextViewPlus
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/currency_value_2"
                            android:textColor="@color/light_yellow"
                            app:customFont="@string/font_bold" />
                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"


                >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/dark_blue"
                    android:gravity="center_horizontal"

                    android:orientation="vertical">

                    <com.com.nusatrip.view.TextViewPlus
                        style="@style/menuTitleTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.25"
                        android:gravity="center"
                        android:text="@string/early" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">

                        <com.com.nusatrip.view.TextViewPlus
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/curreny_name"
                            android:textColor="@color/light_yellow"
                            app:customFont="@string/font_bold" />

                        <com.com.nusatrip.view.TextViewPlus

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/currency_value"
                            android:textColor="@color/light_yellow"
                            android:textSize="@dimen/list_text_size"
                            app:customFont="@string/font_bold" />

                        <com.com.nusatrip.view.TextViewPlus
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/currency_value_2"
                            android:textColor="@color/light_yellow"
                            app:customFont="@string/font_bold" />
                    </LinearLayout>

                </LinearLayout>


            </FrameLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@color/grey"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flight_logo_lion_air" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.com.nusatrip.view.TextViewPlus
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CGK" />

                <com.com.nusatrip.view.TextViewPlus
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/flight_time"
                    android:textSize="@dimen/date_searchflight_text" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.com.nusatrip.view.TextViewPlus
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1h40m" />

                <com.com.nusatrip.view.TextViewPlus
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/direct_flight" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.com.nusatrip.view.TextViewPlus
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="DPS" />

                <com.com.nusatrip.view.TextViewPlus
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/flight_time"
                    android:textSize="@dimen/date_searchflight_text" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/book_now" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.com.nusatrip.view.TextViewPlus
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/RowTextStyle"
                    android:layout_weight="1.5"
                    android:text="@string/flight"
                    app:customFont="@string/font_normal" />
                <com.com.nusatrip.view.TextViewPlus
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/RowTextStyle"
                    android:layout_weight="0.8"
                    android:text="@string/route"
                    app:customFont="@string/font_normal" />
                <com.com.nusatrip.view.TextViewPlus
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/RowTextStyle"
                    android:layout_weight="1.5"
                    android:text="@string/duration"
                    app:customFont="@string/font_normal" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mh_flight_logo"
                    />
                <com.com.nusatrip.view.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/searchflight"
                    android:text="MH726"/>
                </LinearLayout>
            <com.com.nusatrip.view.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/searchflight"
                android:layout_weight="0.8"
                android:text="04:40 Feb 9, 2015- Jakarta(CGK)"/>
            <com.com.nusatrip.view.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/searchflight"
                android:layout_weight="1.5"
                android:text="1h50m"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5">

                    <com.com.nusatrip.view.TextViewPlus
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/searchflight"
                        android:text="Aircraft: 738"/>
                </LinearLayout>
                <com.com.nusatrip.view.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/searchflight"
                    android:layout_weight="0.8"
                    android:text="04:40 Feb 9, 2015- Jakarta(CGK)"/>
                <com.com.nusatrip.view.TextViewPlus
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/searchflight"
                    android:layout_weight="1.5"
                    android:text=""/>
            </LinearLayout>


    </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/restaurant_icon"
                android:layout_weight="1.1"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/luggage_icon"
                android:layout_weight="1.1"/>
            <com.com.nusatrip.view.TextViewPlus
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/RowTextStyle"
                android:text="@string/check_in_luggage"
                android:layout_weight="0.7"/>
            <com.com.nusatrip.view.TextViewPlus
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                style="@style/RowTextStyle"
                android:gravity="left"
                android:text=":30 Kg"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/selct_this_flight"
                android:layout_weight="0.8"/>

            
            </LinearLayout>
        </LinearLayout>

    <com.com.nusatrip.view.TextViewPlus
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        style="@style/searchflight"
        app:customFont="@string/font_bold"
        android:textSize="@dimen/date_searchflight_text"
        android:text="@string/departing_flight"
        />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/margin_top_0">
            <com.com.nusatrip.view.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                app:customFont="@string/font_normal"
                android:text="@string/price"
                />
            <com.com.nusatrip.view.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/passenger_number"/>
            <com.com.nusatrip.view.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/taxes_included"/>
        </LinearLayout>



</LinearLayout>


    </LinearLayout>



