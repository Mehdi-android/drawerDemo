    <style name="RowTextStyle">
        <item name="android:padding">@dimen/margin_top_0</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/list_text_size_15</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">sans</item>

    </style>
    <style name="SearchLocation">
        <item name="android:textSize">@dimen/actionbar_title_size</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:typeface">sans</item>

    </style>

    <style name="searchflight">
        <item name="android:padding">@dimen/margin_top_0</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/airport_name</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="searchflight_date">
        <item name="android:padding">@dimen/margin_top_0</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/date_searchflight_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="menuTitleTextStyle">
        <item name="android:padding">@dimen/margin_top_0</item>
        <item name="android:textSize">@dimen/actionbar_title_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="menuTextStyle">
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/menuitem_normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:drawableLeft">@drawable/menuitem_arrow_normal</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="LoginEditTextStyle">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="FilterButtonStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/edit_text_size</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/filter_btn_selector</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

